{
  "name": "@battlescope/search",
  "version": "1.0.0",
  "description": "Search service with Typesense indexing and API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@battlescope/logger": "workspace:*",
    "@battlescope/types": "workspace:*",
    "@battlescope/events": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "fastify": "^4.25.2",
    "fastify-type-provider-zod": "^1.1.9",
    "typesense": "^1.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@vitest/coverage-v8": "^1.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}

apiVersion: apps/v1
kind: Deployment
metadata:
  name: ingestion-service
  namespace: battlescope
spec:
  replicas: 2
  selector:
    matchLabels:
      app: ingestion-service
  template:
    metadata:
      labels:
        app: ingestion-service
    spec:
      imagePullSecrets:
        - name: dockerhub-secret

      # Init container to run migrations before main container starts
      initContainers:
        - name: migrate
          image: petdog/battlescope-ingestion:latest
          command: ['npm', 'run', 'migrate']
          env:
            - name: NODE_ENV
              value: "production"
            - name: DB_HOST
              value: "postgres"
            - name: DB_PORT
              value: "5432"
            - name: DB_NAME
              value: "battlescope_ingestion"
            - name: DB_USER
              value: "battlescope"
            - name: DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: authentication-secrets
                  key: db-password
          resources:
            requests:
              cpu: 100m
              memory: 128Mi
            limits:
              cpu: 200m
              memory: 256Mi

      # Main container starts only after migrations succeed
      containers:
        - name: ingestion-service
          image: petdog/battlescope-ingestion:latest
          imagePullPolicy: Always
          ports:
            - containerPort: 3001
              protocol: TCP
          env:
            - name: NODE_ENV
              value: "production"
            - name: PORT
              value: "3001"
            - name: LOG_LEVEL
              value: "info"
            - name: DB_HOST
              value: "postgres"
            - name: DB_PORT
              value: "5432"
            - name: DB_NAME
              value: "battlescope_ingestion"
            - name: DB_USER
              value: "battlescope"
            - name: DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: authentication-secrets
                  key: db-password
            - name: REDIS_HOST
              value: "redis"
            - name: REDIS_PORT
              value: "6379"
            - name: KAFKA_BROKERS
              value: "redpanda:9092"
            - name: KAFKA_CLIENT_ID
              value: "ingestion-service"
          livenessProbe:
            httpGet:
              path: /health
              port: 3001
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
          readinessProbe:
            httpGet:
              path: /health
              port: 3001
            initialDelaySeconds: 10
            periodSeconds: 5
            timeoutSeconds: 3
            failureThreshold: 3
          resources:
            requests:
              cpu: 100m
              memory: 256Mi
            limits:
              cpu: 500m
              memory: 512Mi

---
apiVersion: v1
kind: Service
metadata:
  name: ingestion-service
  namespace: battlescope
spec:
  type: ClusterIP
  selector:
    app: ingestion-service
  ports:
    - port: 3001
      targetPort: 3001
      protocol: TCP
      name: http

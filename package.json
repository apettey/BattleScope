{
  "name": "@battlescope/monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "clean": "pnpm exec rimraf dist build coverage",
    "format": "pnpm prettier --write \"{backend,frontend,packages,infra}/**/*.{ts,tsx,js,jsx,json,md,css,scss,yml,yaml}\"",
    "format:check": "pnpm prettier --check \"{backend,frontend,packages,infra}/**/*.{ts,tsx,js,jsx,json,md,css,scss,yml,yaml}\"",
    "lint": "pnpm exec eslint . --max-warnings=0",
    "test": "pnpm exec vitest run --coverage",
    "test:watch": "pnpm exec vitest",
    "typecheck": "pnpm -r run typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@vitest/coverage-v8": "^1.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5",
    "jsdom": "^24.0.0",
    "vitest": "^1.5.0"
  }
}

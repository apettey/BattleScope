    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "fastify": "^4.25.0",
    "@fastify/cors": "^8.4.2",
    "kysely": "^0.27.0",
    "pg": "^8.11.3",
    "kafkajs": "^2.2.4",
    "prom-client": "^15.1.0",
    "pino": "^8.16.2",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  }
